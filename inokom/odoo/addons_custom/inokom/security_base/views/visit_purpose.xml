<?xml version="1.0"?>
<odoo>
    <record id="view_security_vms_visit_purpose_list" model="ir.ui.view">
        <field name="name">inokom.vms.purpose.list</field>
        <field name="model">inokom.vms.purpose</field>
        <field name="arch" type="xml">
            <list string="Visit Purpose" editable="bottom">
                <field name="name"/>
                <field name="hse_induction_required"/>
                <field name="ptw_required"/>
                <field name="qr_code_registration"/>
                <field name="qr_code" readonly="1" widget="image" options="{'zoom': true, 'size': [80, 80]}" invisible="not qr_code_registration"/>
            </list>
        </field>
    </record>

    <record id="action_security_vms_visit_purpose" model="ir.actions.act_window">
        <field name="name">Visit Purpose</field>
        <field name="res_model">inokom.vms.purpose</field>
        <field name="view_mode">list</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Visit Purpose Found!
            </p>
        </field>
    </record>
</odoo>