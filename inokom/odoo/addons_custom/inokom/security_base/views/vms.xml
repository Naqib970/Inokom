<?xml version="1.0"?>
<odoo>
    <record id="view_security_vms_list" model="ir.ui.view">
        <field name="name">inokom.vms.list</field>
        <field name="model">inokom.vms</field>
        <field name="arch" type="xml">
            <list string="Visitor Management">
                <header>
                    <button name="scan_user_detail" type="object" class="o_button_generate_leads"
                        string="Scan Visitor" display="always" />
                </header>
                <field name="name" />
                <field name="id_no" />
                <field name="visit_purpose" />
                <field name="checkin_time" />
                <field name="checkout_time" />
                <button string="Checkin"
                    type="object"
                    name="action_visitor_checkin"
                    icon="fa-external-link"
                    class="btn-primary"
                    invisible="checkin_time" />
                <button string="Generate Pass"
                    type="object"
                    name="action_visitor_generate_pass"
                    icon="fa-external-link"
                    class="btn-primary"
                    invisible="checkin_time" />
                <button string="Checkout"
                    type="object"
                    name="action_visitor_checkout"
                    icon="fa-external-link"
                    class="btn-secondary"
                    invisible="not checkin_time or checkout_time" />
            </list>
        </field>
    </record>

    <record id="view_security_vms_form" model="ir.ui.view">
        <field name="name">inokom.vms.form</field>
        <field name="model">inokom.vms</field>
        <field name="arch" type="xml">
            <form string="Visitor Management">
                <header>
                    <field name="status" />
                    <field name="status" widget="statusbar"
                        statusbar_visible="submit,ongoing,complete" />
                </header>
                <sheet>
                    <group string="Visitor Detail">
                        <group>
                            <field name="name" />
                            <field name="id_no" />
                            <field name="vehicle_no" />
                            <field name="host_name" />
                            <field name="visit_purpose" />
                        </group>
                        <group>
                            <field name="expected_date" />
                            <field name="checkin_time" readonly="1" />
                            <field name="checkout_time" />
                        </group>
                    </group>

                    <div class="g-col-sm-2">
                        <div class="o_horizontal_separator mt-4 mb-3 text-uppercase fw-bolder small">Personal
                            Data Protection Act Agreement (PDPA)</div>
                    </div>
                    <field name="pdpa_file" filename="pdpa_filename" />
                    <field name="pdpa_filename" invisible="1" />
                    <div class="g-col-sm-2">
                        <div class="o_horizontal_separator mt-4 mb-3 text-uppercase fw-bolder small">ITEMS
                            DECLARATION Form</div>
                    </div>
                    <field name="item_declaration" nolabel="1">
                        <list editable="bottom">
                            <field name="name" />
                            <field name="quantity" />
                        </list>
                    </field>
                    <div invisible="not checkin_time">
                        <div class="g-col-sm-2">
                            <div class="o_horizontal_separator mt-4 mb-3 text-uppercase fw-bolder small">Host Declaration Form</div>
                        </div>
                        <field name="host_declare_file" filename="host_declare_filename" />
                        <field name="host_declare_filename" invisible="1" />
                    </div>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <record id="view_security_vms_search" model="ir.ui.view">
        <field name="name">inokom.vms.search</field>
        <field name="model">inokom.vms</field>
        <field name="arch" type="xml">
            <search string="Search Visitor Management">
                <searchpanel>
                    <field name="status" enable_counters="1" />
                </searchpanel>
                <filter string="Today" name="filter_today"
                    domain="[('expected_date', '&gt;=', (context_today()).strftime('%%Y-%%m-%%d 00:00:00')),
                         ('expected_date', '&lt;=', (context_today()).strftime('%%Y-%%m-%%d 23:59:59'))]"
                    help="Show records for today only" />
            </search>
        </field>
    </record>

    <record id="action_security_vms" model="ir.actions.act_window">
        <field name="name">Visitor</field>
        <field name="res_model">inokom.vms</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids"
            eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('view_security_vms_list')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_security_vms_form')}),
            ]" />
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Visitor Found!
            </p>
        </field>
    </record>

    <record id="view_security_vms_scan_form" model="ir.ui.view">
        <field name="name">inokom.vms.scan.form</field>
        <field name="model">inokom.vms.scan</field>
        <field name="arch" type="xml">
            <form string="Visitor Scan">
                <group>
                    <field name="name" />
                    <field name="id_no" />
                </group>
                <footer>
                    <button name="search_visitor" string="Scan" class="btn-primary" type="object" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>