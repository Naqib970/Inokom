<?xml version="1.0"?>
<odoo>
    <data>
        <menuitem id="contacts.menu_config_bank_accounts"
            name="Bank Accounts"
            parent="contacts.res_partner_menu_config"
            sequence="6"
            groups="base.group_no_one"/>
        
        <menuitem id="contacts.menu_action_res_bank_form"
            action="base.action_res_bank_form"
            parent="contacts.menu_config_bank_accounts"
            sequence="1"
            groups="base.group_no_one"/>

        <menuitem id="contacts.menu_action_res_partner_bank_form"
            action="base.action_res_partner_bank_account_form"
            parent="contacts.menu_config_bank_accounts"
            sequence="2"
            groups="base.group_no_one"/>
    </data>
        

    <record id="view_inokom_department_list" model="ir.ui.view">
        <field name="name">inokom.department.list</field>
        <field name="model">inokom.department</field>
        <field name="arch" type="xml">
            <list string="Department" editable="bottom">
                <field name="name"/>
                <field name="hod"/>
                <field name="manager" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="action_partner_department" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="res_model">inokom.department</field>
        <field name="view_mode">list</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Department Found!
            </p>
        </field>
    </record>
    
    <menuitem id="menu_partner_department_config"
        action="action_partner_department"
        name="Department"
        sequence="4" 
        parent="contacts.res_partner_menu_config"/>
</odoo>