<?xml version="1.0"?>
<odoo>
    <record id="view_hse_area_list" model="ir.ui.view">
        <field name="name">hse.area.list</field>
        <field name="model">hse.area</field>
        <field name="arch" type="xml">
            <list string="Area" editable="bottom">
                <field name="name" />
                <field name="area_owner" />
            </list>
        </field>
    </record>

    <record id="action_hse_area" model="ir.actions.act_window">
        <field name="name">Area</field>
        <field name="res_model">hse.area</field>
        <field name="view_mode">list</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Area Found!
            </p>
        </field>
    </record>
</odoo>